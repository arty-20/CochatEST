<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pregunta_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:text="@string/pregunta_uno" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/verdad_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/boton_verdad"
                android:textColor="@color/colorVerde"
                android:textAllCaps="false" />
            <Button
                android:id="@+id/falso_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/boton_falso"
                android:textColor="@color/colorRojo"
                android:textAllCaps="false" />
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>